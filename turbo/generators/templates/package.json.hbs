{
  "name": "@jwc/{{ name }}",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsdown",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "format": "biome format --write *.ts",
    "lint": "biome lint --error-on-warnings *.ts",
    "typecheck": "tsc --noEmit",
    "watch": "tsdown --watch"
  },
  "devDependencies": {
    "@jwc/tsconfig": "workspace:*",
    "tsdown": "catalog:",
    "typescript": "catalog:"
  }
}
