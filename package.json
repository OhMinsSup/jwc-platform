{
	"name": "jwc-forms",
	"private": true,
	"keywords": [
		"jwc"
	],
	"license": "ISC",
	"author": "OhMinsSup",
	"workspaces": [
		"apps/*",
		"packages/*",
		"tooling/*"
	],
	"scripts": {
		"bootstrap": "husky",
		"build": "turbo run build",
		"clean": "git clean -xdf node_modules",
		"clean:workspaces": "turbo run clean",
		"dev": "turbo watch dev --continue",
		"dev:next": "turbo watch dev -F @jwc/web-forms...",
		"format": "turbo run format",
		"gen:init": "turbo gen init",
		"generate:importmap": "turbo run generate:importmap",
		"generate:types": "turbo run generate:types",
		"postinstall": "pnpm lint:ws",
		"lint": "turbo run lint && manypkg check",
		"lint:ws": "pnpm dlx sherif@latest",
		"lint:syncpack": "syncpack lint",
		"migrate": "turbo -F @jwc/payload migrate",
		"migrate:create": "turbo -F @jwc/payload migrate:create",
		"migrate:fresh": "turbo -F @jwc/payload migrate:fresh",
		"typecheck": "turbo run typecheck",
		"ui-add": "turbo run ui-add"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@manypkg/cli": "^0.24.0",
		"@turbo/gen": "^2.4.0",
		"@types/node": "^22.10.10",
		"dotenv-cli": "^8.0.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.0",
		"syncpack": "^13.0.4",
		"turbo": "^2.4.0",
		"typescript": "catalog:"
	},
	"packageManager": "pnpm@9.7.0",
	"engines": {
		"bun": ">=1.0",
		"node": ">=20.16.0"
	}
}
