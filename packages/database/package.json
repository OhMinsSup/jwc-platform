{
	"name": "@jwc/database",
	"version": "0.1.0",
	"private": true,
	"license": "MIT",
	"type": "module",
	"exports": {
		"./package.json": "./package.json",
		".": "./src/index.ts",
		"./client": "./src/client.ts"
	},
	"scripts": {
		"clean": "git clean -xdf .cache .turbo dist node_modules",
		"db:generate": "pnpm with-env prisma generate",
		"db:migrate:dev": "pnpm with-env prisma migrate dev",
		"db:push": "pnpm with-env prisma db push",
		"db:studio": "pnpm with-env prisma studio",
		"format": "biome format --write ./src",
		"lint": "biome lint --error-on-warnings ./src",
		"typecheck": "tsc --noEmit",
		"with-env": "dotenv -e ../../.env --"
	},
	"dependencies": {
		"@jwc/env": "workspace:*",
		"@prisma/adapter-d1": "catalog:prisma6",
		"@prisma/client": "catalog:prisma6"
	},
	"devDependencies": {
		"@jwc/tsconfig": "workspace:*",
		"prisma": "catalog:prisma6",
		"typescript": "catalog:"
	}
}
