{
  "name": "@jwc/backend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "./auth": {
    "types": "./dist/convex/auth.d.ts",
    "default": "./convex/auth.ts"
  },
  "./convex/*": {
    "types": "./dist/convex/*.d.ts",
    "default": "./convex/*.ts"
  },
  "scripts": {
    "build": "tsdown",
    "clean": "git clean -xdf .cache .turbo dist node_modules convex/_generated",
    "format": "biome format --write ./src",
    "lint": "biome lint --error-on-warnings ./src",
    "typecheck": "tsc --noEmit",
    "auth:generate": "pnpm with-env pnpx @better-auth/cli generate --output ./src/auth-schema.ts",
    "convex:dev": "pnpm with-env convex dev --local",
    "convex:setup": "pnpm with-env convex dev --local --until-success",
    "convex:deploy": "pnpm with-env convex deploy",
    "with-env": "dotenv -e ../../.env --"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@jwc/tsconfig": "workspace:*",
    "@types/node": "^24.3.0",
    "typescript": "catalog:"
  },
  "dependencies": {
    "@better-auth/expo": "catalog:",
    "@convex-dev/better-auth": "catalog:",
    "better-auth": "catalog:",
    "convex": "catalog:",
    "tsdown": "catalog:"
  }
}
